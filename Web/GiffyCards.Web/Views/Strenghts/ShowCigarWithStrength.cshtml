@model GiffyCards.Web.ViewModels.StrenghtsList
<!-- Best Sell Product Section Start -->
<div class="product-section section mb-60">
    <div class="container">
        <div class="row">

            <!-- Section Title Start -->
            <div class="col-12 mb-40">
                <div class="section-title-one" data-title="@Model.CurrentStreght.StrenghtType.ToUpper()"><h1>@Model.CurrentStreght.StrenghtType.ToUpper()</h1></div>
            </div><!-- Section Title End -->
            <div>
                <img src="@Model.CurrentStreght.ImageUrl" width="100" class="mr-3 img-responsive">
            </div>
            <div class="col-12">
                <div class="row">
                    @foreach (var cigar in Model.Cigars)
                    {

                        <div class="col-xl-3 col-lg-4 col-md-6 col-12 pb-30 pt-10">
                            <!-- Product Start -->
                            <div class="ee-product">

                                <!-- Image -->
                                <div class="image">

                                    <a href="single-product.html" class="img"><img src="@cigar.ImageUrl" alt="Product Image"></a>

                                    <div class="wishlist-compare">
                                        <a href="#" data-tooltip="Compare"><i class="ti-control-shuffle"></i></a>
                                        <a href="#" data-tooltip="Wishlist"><i class="ti-heart"></i></a>
                                    </div>

                                    <a href="#" class="add-to-cart"><i class="ti-shopping-cart"></i><span>ADD TO CART</span></a>

                                </div>

                                <!-- Content -->
                                <div class="content">

                                    <!-- Category & Title -->
                                    <div class="category-title">

                                        <h5 class="title"><a asp-action="CigarById" asp-route-id="@cigar.Id">@cigar.CiagrName</a></h5>

                                    </div>

                                    <!-- Price & Ratting -->
                                    <div class="price-ratting">

                                        <h5 class="price">@cigar.PriceForSingle</h5>
                                        <h5 class="price">@cigar.PriceForBox</h5>
                                        <br><br>
                                        <div class="ratting">
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                        </div>

                                    </div>

                                </div>

                            </div><!-- Product End -->

                        </div>
                    }

                </div>
            </div>

        </div>
    </div>
</div>
<!-- Best Sell Product Section End -->
