@model GiffyCards.Web.ViewModels.Brands.BrandsList
<h1>Brands All Page</h1>

<hr />
<div class="row">
    @foreach(var brand in this.Model.Brands)
    {
        <div class="media col-md-4">
            <img src="@brand.ImageUrl" width="100" class="mr-3 img-responsive">
            <div class="media-body">
                <h5 class="mt-0"><a asp-action="ShowCigarWithBrand" asp-route-id ="@brand.Id">@brand.BrandName</a></h5>
            </div>
        </div>
    }
</div>