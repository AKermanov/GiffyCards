@model GiffyCards.Web.ViewModels.ShoppingCart.ItemsInCartViewModel

<div class="cart_section">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 offset-lg-1">
                <div class="cart_container">
                    <div class="cart_title">Shopping Cart<small> (@Model.ItemsInCart.Count() item in your cart) </small></div>
                    @foreach (var item in Model.ItemsInCart)
                    {
                        <div class="cart_items">
                            <ul class="cart_list">
                                <li class="cart_item clearfix">
                                    <div class="cart_item_image"><img src="@item.ImageUrl" alt=""></div>
                                    <div class="cart_item_info d-flex flex-md-row flex-column justify-content-between">
                                        <div class="cart_item_name cart_info_col">
                                            <div class="cart_item_title">Name</div>
                                            <div class="cart_item_text">@item.CigarName</div>
                                        </div>
                                        <div class="cart_item_color cart_info_col">
                                            <div class="cart_item_title">Shape</div>
                                            <div class="cart_item_text">@item.CigarShape</div>
                                        </div>
                                        <div class="cart_item_quantity cart_info_col">
                                            <div class="cart_item_title">Quantity</div>
                                            <div class="cart_item_text">@item.Quantity</div>
                                        </div>
                                        <div class="cart_item_price cart_info_col">
                                            <div class="cart_item_title">Price</div>
                                            <div class="cart_item_text">$@item.PriceForSingle</div>
                                        </div>
                                        <div class="cart_item_total cart_info_col">
                                            <div class="cart_item_title">Total</div>
                                            <div class="cart_item_text">$@Math.Round(item.TotalPrice, 2)</div>
                                        </div>

                                        <form method="post" asp-action="RemoveFromCart">
                                            <input type="hidden" name="cigarId" asp-for="@item.CigarId" />
                                            <input type="submit" value="Remove" class="btn btn-danger" />
                                        </form>
                                    </div>
                                </li>
                            </ul>
                        </div>
                                                }
                    <div class="order_total">
                        <div class="order_total_content text-md-right">
                            <div class="order_total_title">Order Total:</div>
                            <div class="order_total_amount">$@Math.Round(Model.OrderTotal, 2)</div>
                        </div>
                    </div>

                    <div class="cart_buttons">
                        <a class="button cart_button_checkout" asp-controller="Cigars" asp-action="AllCigars">Continue Shopping</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>